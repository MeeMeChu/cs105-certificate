generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(uuid())
  firstName     String?
  lastName      String?
  email         String    @unique
  password      String 
  role          String    @default("Member")
  createdAt     DateTime  @default(now())
  updataAt      DateTime  @updatedAt
}

model Event {
  id            String        @id @default(uuid())
  title         String
  description   String
  image         String?
  date          DateTime
  location      String
  secretPass    String        @default("password")
  status        String        @default("Draft")
  createdAt     DateTime      @default(now())
  updateAt      DateTime      @updatedAt
  registrations Registration[]
}

model Registration {
  id           String   @id @default(uuid())
  eventId      String
  checkedIn    Boolean?  @default(false)
  email        String
  prefix       String?
  firstName    String    
  lastName     String
  year         String
  schoolName   String
  registrationDate DateTime @default(now()) // Optional field to store the registration time
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade) // เพิ่ม onDelete: Cascade ที่นี่}
}